<!DOCTYPE HTML>
<html>
	<head>
		<title>Touring</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="stylesheet" href="assets/css/main.css" />
	</head>
	<body class="subpage">

		<!-- Header -->
			<header id="header" class="alt">
				<div class="logo"><a href="home"><img src="images/logo.png">Noise Pageant </a></div>
				<a href="#menu"><span>Menu</span></a>
			</header>

		<!-- Nav -->
			<nav id="menu">
				<ul class="links">
					<li><a href="home">Home</a></li>
					<li><a href="noise-pageant-tour">Tour</a></li>
					<li><a href="biography">Biography</a></li>
          <li><a href="newsletter">Newsletter</a></li>
          <%if(!currentuser){%>
          <li><span style="display:block;"></span><a class="links" href="/users/login" >Log In</a></span></li>
          <%}else{%>
          <li><span style="display:block;"></span><a class="links" href="/logout" >Log Out</a></span></li>
          <%}%>
          <%if(currentuser){%>
          <p style="color: rgb(0, 0, 0);">Welcome <%=currentuser.username%></p>
          <%}%>
          
				</ul>
			</nav>


<div class="row" style="margin-top:30px;">
    <div class="col-md-12 col-sm-12">
      <h1 class="display-1">Noise Pageant Tour</h1>
    </div>
    <table border>
      <caption>Tour dates</caption>
      <thead>
        <tr>
          <th>Date</th>
          <th>Location</th>
          <th>Venue</th>
          <th>Tickets</th>
          <%if(currentuser.isSuper){%>
            <th>Upload</th>
            <th>Delete</th>
          <%}else{%>
          <%}%>
        </tr>
      </thead>
      <tbody>
        <%if(currentuser.username==="#######"){%>
          <form class="" action="/tours" method="post">
            <tr>
              <td><input type="text" name="date" placeholder="Date"></td>
              <td><input type="text" name="location" placeholder="Location"></td>
                <td><input type="text" name="venue" placeholder="Venue"></td>
                <td></td>
              <td><input class="btn btn-primary" type="submit" name="Upload" value="Upload"></td>
                <td></td>
              </tr>
              </form>
        <%for(let i=0;i<tours.length;i++){%>
        <tr>
          <td><em><%=tours[i].date%></em></td>
          <td><em><%=tours[i].location%></em></td>
          <td><em><%=tours[i].venue%></em></td>
          <td><a href="https://www.viva.gr" target="_blank ">Tickets</a></td>
          <td></td>
          <form action="<%="/tour-delete/"+tours[i]._id%>" method="post">
        <td><input class="btn btn-primary"type="submit" name="Delete" value="Delete"></td>
        </form
        </tr>
        <%}%>
          <%}else{%>
            <%for(let i=0;i<tours.length;i++){%>
              <tr>
                <td><em><%=tours[i].date%></em></td>
                <td><em><%=tours[i].location%></em></td>
                <td><em><%=tours[i].venue%></em></td>
                <td><a href="https://www.viva.gr" target="_blank ">Tickets</a></td>
              </tr>
            <%}%>
          <%}%>
      </tbody>
    </table>
</div>


<footer id="footer">
  <div class="inner">
    <ul class="icons">
      <li><a href="https://www.youtube.com/channel/UCDV7Lc2_hyUz3twN-OL5-QQ/" class="icon round fa-youtube" target="_blank"><span class="label">Youtube</span></a></li>
      <li><a href="https://www.facebook.com/noisepageant/" class="icon round fa-facebook" target="_blank"><span class="label">Facebook</span></a></li>
      <li><a href="https://www.instagram.com/noise_pageant/" class="icon round fa-instagram" target="_blank"><span class="label">Instagram</span></a></li>
    </ul>
    <div class="copyright">
      <p style="display:block; text-align:center;color:black;">&copy; 2020 Noise Pageant. All Rights Reserved.</p>
    </div>

  </div>
</footer>

	<!-- Scripts -->
    <script src="assets/js/jquery.min.js"></script>
    <script src="assets/js/jquery.scrolly.min.js"></script>
    <script src="assets/js/jquery.scrollex.min.js"></script>
    <script src="assets/js/skel.min.js"></script>
    <script src="assets/js/util.js"></script>
    <script src="assets/js/main.js"></script>
    
</body>
</html>